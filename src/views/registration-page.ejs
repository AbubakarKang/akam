<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../styles/registration-page.css">
    <script src="../js/registration-page.js" defer></script>
    <link rel="stylesheet" href="../styles/index.css">
</head>
<body>
    <%- include('./titlebar') %>

    <div class="registration-page">
        <div class="registration-page-img">
            <img class="main-image" src="../assets/logo.png">
        </div>
        <div class="registration-page-title">Register</div>
        <div class="registration-page-inputs">
            <div class="username-input input-div">
                <input data-username-input type="text" name="username-input" id="username-input" class="input">
                <label data-username-input-label for="username-input" class="input-label">Username</label>
            </div>
            <div class="email-input input-div">
                <input data-email-input type="text" name="email-input" id="email-input" class="input">
                <label data-email-input-label for="email-input" class="input-label e-input">Email</label>
            </div>
            <div class="password-input input-div">
                <input data-password-input type="password" name="password-input" id="password-input" class="input">
                <label data-password-input-label for="password-input" class="input-label">Password</label>
            </div>
            <div class="password-confirm-input input-div">
                <input data-password-confirm-input type="password" name="password-confirm-input" id="password-confirm-input" class="input">
                <label data-password-confirm-input-label for="password-confirm-input" class="input-label pc-input">Confirm Password</label>
            </div>
        </div>
        <div class="registration-page-button">
            <button id="registration-btn" class="registration-page-btn">Register</button>
        </div>
        <div class="offer-login">
            <a href="./login-page.ejs" class="offer-login-link">Have an account? Login now.</a>
        </div>
    </div>
</body>
</html>